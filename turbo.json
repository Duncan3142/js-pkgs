{
	"$schema": "https://turborepo.org/schema.json",
	"globalDependencies": ["package.json", ".env"],
	"pipeline": {
		"format:prettier": {
			"outputs": [".prettier/**"],
			"dependsOn": []
		},
		"format:all": {
			"outputs": [],
			"dependsOn": ["format:prettier"]
		},
		"assets:tsc": {
			"outputs": [".tsc/**"],
			"dependsOn": []
		},
		"assets:all": {
			"outputs": [],
			"dependsOn": ["assets:tsc"]
		},
		"test:eslint": {
			"outputs": [".eslint/**"],
			"dependsOn": ["assets:all"]
		},
		"test:node": {
			"outputs": [".coverage/**"],
			"dependsOn": ["assets:all"]
		},
		"test:all": {
			"outputs": [],
			"dependsOn": ["test:eslint", "test:node"]
		},
		"build:all": {
			"outputs": [],
			"dependsOn": ["format:all", "assets:all", "test:all"]
		}
	}
}
